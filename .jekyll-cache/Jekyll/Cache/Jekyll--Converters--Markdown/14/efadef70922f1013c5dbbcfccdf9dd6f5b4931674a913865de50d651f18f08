    List&lt;Object&gt; list=new ArrayList&lt;Object&gt;();
    public void add(Object o){
        list.add(o);
    }
    public int size(){
        return list.size();
    }

    public static void main(String[] args) {
        Container1 c1 = new Container1();
        new Thread(()-&gt;{
            for (int i=0;i&lt;10;i++){
                c1.add(new Object());
                System.out.println("add"+i);
